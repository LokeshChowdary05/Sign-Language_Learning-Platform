# Sign Language Learning Platform Environment Configuration
# Copy this file to .env and fill in your actual values

# Firebase Configuration
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_PRIVATE_KEY_ID=your-private-key-id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour private key here\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=your-service-account@your-project.iam.gserviceaccount.com
FIREBASE_CLIENT_ID=your-client-id
FIREBASE_CLIENT_X509_CERT_URL=https://www.googleapis.com/robot/v1/metadata/x509/your-service-account%40your-project.iam.gserviceaccount.com

# Google Translate API
GOOGLE_TRANSLATE_API_KEY=your-google-translate-api-key

# Model Configuration
MODEL_PATH=src/models/mobilenetv3_sign_language.h5
CLASS_NAMES_PATH=src/models/class_names.txt
MODEL_VERSION=1.0.0

# Camera Settings
CAMERA_WIDTH=1280
CAMERA_HEIGHT=720
CAMERA_FPS=30
CAMERA_BUFFER_SIZE=1

# Application Settings
DEBUG=False
LOG_LEVEL=INFO
SECRET_KEY=your-secret-key-here
JWT_SECRET_KEY=your-jwt-secret-key-here

# Performance Settings
MAX_WORKERS=4
BATCH_SIZE=32
MODEL_CACHE_SIZE=100

# Feature Flags
ENABLE_REAL_TIME_FEEDBACK=True
ENABLE_PROGRESS_ANALYTICS=True
ENABLE_SOCIAL_FEATURES=False
ENABLE_OFFLINE_MODE=False

# External APIs
ENABLE_GOOGLE_TRANSLATE=True
ENABLE_FIREBASE_STORAGE=True
ENABLE_ANALYTICS=False

# Development Settings
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=localhost
STREAMLIT_BROWSER_GATHER_USAGE_STATS=False
